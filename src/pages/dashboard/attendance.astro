---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import DashboardTabs from "../../components/DashboardTabs.astro";
import AttendanceTable from "../../components/AttendanceTable.astro";

const tabs = [
  { name: "Estudiante", href: "/dashboard", active: false },
  { name: "Información", href: "/dashboard/student", active: false },
  { name: "Inasistencias", href: "/dashboard/attendance", active: true }
];
---

<Layout title="Panel SAGE - Inasistencias">
  <Navbar />
  <main class="pt-24 px-4 min-h-screen">
    <div class="max-w-7xl mx-auto space-y-4">
      <DashboardTabs tabs={tabs} />
      
      <div class="card backdrop-blur-xl bg-black/30 shadow-xl border border-white/20">
        <div class="card-body">
          <div class="flex flex-col items-center gap-6 w-full">
            <div class="w-full">
              <div id="no-student" class="hidden">
                <div class="text-center p-8">
                  <h3 class="text-xl text-white/90 mb-4">No hay estudiante seleccionado</h3>
                  <p class="text-white/70">Por favor, busca y selecciona un estudiante desde la página principal.</p>
                  <a href="/dashboard" class="inline-block mt-4 px-4 py-2 bg-white/10 hover:bg-white/20 border border-white/20 text-white/90 rounded-lg backdrop-blur-sm transition-all duration-200">
                    Ir a Buscar
                  </a>
                </div>
              </div>
              <div id="attendance-container" class="hidden">
                <h2 class="text-2xl font-bold text-white/90 text-center mb-8">Registro de Inasistencias</h2>
                <AttendanceTable />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  class AttendanceViewer {
    private studentContainer: HTMLDivElement;
    private noStudentMessage: HTMLDivElement;

    constructor() {
      this.initializeElements();
      this.checkStudent();
    }

    private initializeElements(): void {
      this.studentContainer = document.getElementById('attendance-container') as HTMLDivElement;
      this.noStudentMessage = document.getElementById('no-student') as HTMLDivElement;
    }

    private checkStudent(): void {
      const studentId = localStorage.getItem('selectedStudentId');

      if (!studentId) {
        this.noStudentMessage.classList.remove('hidden');
        this.studentContainer.classList.add('hidden');
        return;
      }

      this.studentContainer.classList.remove('hidden');
      this.noStudentMessage.classList.add('hidden');
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    new AttendanceViewer();
  });
</script>